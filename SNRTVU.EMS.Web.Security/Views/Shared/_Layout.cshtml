<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 后台管理 - @Config.SiteName</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @Html.Partial("_HeaderPartial")

    <div class="container-fluid">
        <div class='row'>
            <div class='navbar-default col-lg-2 col-md-3 col-sm-3 col-xs-5'>
                <ul id="menu" class="nav nav-pills nav-stacked">
                    <li class="panel active">
                        <a href="javascript:;" data-toggle="collapse" data-parent="#menu" data-target="#home">
                            <span class="glyphicon glyphicon-home"></span>
                            <span>管理首页</span>
                        </a>
                        <ul class="nav collapse in" id="home">
                            <li><a href="@Url.Action("index", "home")">个人信息</a></li>
                            <li><a href="@Url.Action("fee", "home")">缴费查询</a></li>
                        </ul>
                    </li>
                    <li class="panel active">
                        <a data-toggle="collapse" data-parent="#menu" data-target="#cog" href="javascript:;">
                            <span class="glyphicon glyphicon-cog"></span>
                            <span>个人中心</span>
                            <span class="caret"></span>
                        </a>
                        <ul class="nav collapse in" id="cog">
                            <li><a href="@Url.Action("changepassword", "manage")">修改密码</a></li>
                            <li><a href="@Url.Action("modifyprofile", "manage")">修改资料</a></li>
                            <li><a href="@Url.Action("modifycontact", "manage")">联系方式</a></li>
                        </ul>
                    </li>
                    <li class="panel active">
                        <a data-toggle="collapse" data-parent="#menu" data-target="#download" href="javascript:;">
                            <span class="glyphicon glyphicon-download-alt"></span>
                            <span>下载中心</span>
                            <span class="caret"></span>
                        </a>
                        <ul class="nav collapse in" id="download">
                            <li><a href="@Url.Content(Config.ChromeDownload)">谷歌下载</a></li>
                            <li><a href="@Config.FirefoxDownload">火狐下载</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class='col-lg-10 col-md-9 col-sm-9 col-xs-7'>
                @RenderBody()
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/common")
    @RenderSection("scripts", required: false)
</body>
</html>